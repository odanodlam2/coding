def get_letter():
    while True:
        letter = input("Enter a letter:")
        if letter == letter.lower():
            if len(letter) == 1:
                return letter
            else: 
                print("Character must be a lowercase letter!")
        else:
            print("Must be a lowercase letter!")
            
def get_index():
    word = input("Enter a word: ")
    while True:
        index = int(input("Enter an index (-1 to quit): "))
        if index == -1:
            break
        try:
            word[index]
            print(word[:index] + get_letter() + word[index+1:])
        except:
            print("Invalid index.")
