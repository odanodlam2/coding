width = 600
height = 500

border_width = 40

paddle_width = 20
paddle_height = 100

movement_speed = 10

vertical_border1 = Rectangle(border_width, height)
vertical_border1.set_color(Color.red)

vertical_border2 = Rectangle(border_width, height)
vertical_border2.set_color(Color.red)
vertical_border2.set_position(width-border_width, 0)

horizontal_border1 = Rectangle(width, border_width)
horizontal_border1.set_color(Color.red)

horizontal_border2 = Rectangle(width, border_width)
horizontal_border2.set_position(0, height-border_width)
horizontal_border2.set_color(Color.red)

paddle_left =  Rectangle(paddle_width, -paddle_height)
paddle_left.set_position(border_width+5, (height+paddle_height)/2)
paddle_left.set_color(Color.green)

paddle_right =  Rectangle(paddle_width, -paddle_height)
paddle_right.set_position(width - border_width-paddle_width-5, (height+paddle_height)/2)
paddle_right.set_color(Color.red)


def move_block(event):
    y = paddle_left.get_y() 

    if event.key == "a":
        if y != border_width+paddle_height:
            paddle_left.move(0, -movement_speed)
    if event.key == "z":
        if y != height-border_width:
            print("sounds godo")
            paddle_left.move(0, movement_speed)
            
    y = paddle_right.get_y()
    
    if event.key == "ArrowUp":
        if y != border_width+paddle_height:
            paddle_right.move(0, -movement_speed)
    if event.key == "ArrowDown":
        if y != height-border_width:
            paddle_right.move(0, movement_speed)



set_size(width, height)

txt = Text("Click to start")
txt.set_position(width/2-70, height/2+5)
add(txt)

def start_game(x, y):
    remove(txt)
    
    add(vertical_border1)
    add(vertical_border2)
    add(horizontal_border1)
    add(horizontal_border2)
    
    add(paddle_left)
    add(paddle_right)
    
    
    title = Text("PADDLE GAME")
    title.set_position(width/2-100, 25)
    title.set_color(Color.black)
    add(title)
    
    add_key_down_handler(move_block)
    
add_mouse_click_handler(start_game)

    
