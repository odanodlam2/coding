width = 600
height = 500

border_width = 40
block_dimension = 50

movement_speed = 10

vertical_border1 = Rectangle(border_width, height)
vertical_border2 = Rectangle(border_width, height)
vertical_border2.set_position(width-border_width, 0)

horizontal_border1 = Rectangle(width, border_width)
horizontal_border2 = Rectangle(width, border_width)
horizontal_border2.set_position(0, height-border_width)

my_block =  Rectangle(block_dimension, block_dimension)
my_block.set_position(border_width, border_width)
my_block.set_color(Color.green)


def move_block(event):
    y = my_block.get_y() 
    x = my_block.get_x()

    if event.key == "ArrowUp":
        if y != border_width:
            my_block.move(0, -movement_speed)
    if event.key == "ArrowLeft":
        if x != border_width:
            my_block.move(-movement_speed, 0)
    if event.key == "ArrowDown":
        if y != height-block_dimension-border_width:
            my_block.move(0, movement_speed)
    if event.key == "ArrowRight":
        if x != width-block_dimension-border_width:
            my_block.move(movement_speed, 0)


set_size(width, height)

txt = Text("Click to start")
txt.set_position(width/2-50, height/2+25)
add(txt)

def start_game(x, y):
    remove(txt)
    
    add(vertical_border1)
    add(vertical_border2)
    add(horizontal_border1)
    add(horizontal_border2)
    add(my_block)
    
    title = Text("Moving blocks")
    title.set_position(width/2-50, 25)
    title.set_color(Color.red)
    add(title)
    
    add_key_down_handler(move_block)
    
add_mouse_click_handler(start_game)

    
