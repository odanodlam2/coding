def citation(name_tuple):
    if len(name_tuple) == 3:
        return f"{name_tuple[2]}, {name_tuple[0]} {name_tuple[1]}"
    else:
        return f"{name_tuple[1]}, {name_tuple[0]}"

print(citation(("Martin", "Luther", "King, Jr.")))  # Output: King, Jr., Martin Luther
print(citation(("J.", "D.", "Salinger")))  # Output: Salinger, J. D.
print(citation(("Ursula", "K.", "Le Guin")))  # Output: Le Guin, Ursula K.
print(citation(("J.", "K.", "Rowling")))  # Output: Rowling, J. K.
